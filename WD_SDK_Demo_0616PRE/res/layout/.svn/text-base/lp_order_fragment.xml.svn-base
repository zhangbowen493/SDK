<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:background="#000"
        
        >

        <Button
            android:id="@+id/btn_order_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:textColor="#fff"
            android:paddingLeft="12dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:text="返回" />

        <TextView
            android:id="@+id/tv_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:text="付款详情" />
        
    </RelativeLayout>

    <LinearLayout 
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        >
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="12dp"
            >
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="订单详情" />
            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#000"
                android:text="商品标题" />
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#ccc"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="12dp"
            >
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="支付账户" />
            <TextView
                android:id="@+id/tv_order_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="186****1234" />
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#ccc"
            />
        <RelativeLayout 
            android:id="@+id/rl_order_payment_method"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="12dp"
            >
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="付款方式" />
            <TextView
                android:id="@+id/tv_order_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/yp_jiantou_down"
                android:gravity="center_vertical"
                android:text="余额支付" />
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#ccc"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="12dp"
            >
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:text="需付款" />
            <TextView
                android:id="@+id/tv_order_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="0.01元" />
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#fff"
        >
        
     <cn.passguard.PassGuardEdit
                android:id="@+id/edt_passguard_pay_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:gravity="center_vertical|left"
                android:hint="请输入支付密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="#eee"
                 />

    <Button
        android:id="@+id/btn_order_pay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#fff"
        android:background="#019fee"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="确认付款" />
     <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#ccc"
            />
    </LinearLayout>
    
</LinearLayout>
