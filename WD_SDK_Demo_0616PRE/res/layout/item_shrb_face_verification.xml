<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_face_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/security_face" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_face_loading"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/face_content"
                android:layout_alignTop="@+id/face_content"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/face_content" />

            <TextView
                android:id="@+id/face_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:text="即将开始人脸识别，请做好准备..."
                android:textColor="#252526"
                android:textSize="19sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>