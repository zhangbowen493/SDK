<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/union_keyboard_root"
    style="@style/union_keyboard_root_style"
    android:focusable="false"
    android:focusableInTouchMode="false" >

    <!-- title -->
    <RelativeLayout android:id="@+id/union_keyboard_title"
        style="@style/union_keyboard_title_style" >

        <TextView
            android:id="@+id/union_keyboard_title_text"
            style="@style/union_keyboard_title_text_style" />

        <!--<TextView
            android:id="@+id/union_keyboard_title_text_dismiss"
            style="@style/union_keyboard_title_text_dismiss_style" />-->

        <ImageButton
            android:id="@+id/union_keyboard_title_text_dismiss"
            style="@style/union_keyboard_title_text_dismiss_image_button_style" />

    </RelativeLayout>

    <!-- content -->
    <LinearLayout android:id="@+id/union_keyboard_content"
        style="@style/union_keyboard_number_content_style" >

        <LinearLayout style="@style/union_keyboard_content_row_style" >

            <Button
                android:id="@+id/union_keyboard_btn_1"
                style="@style/union_keyboard_number_common_btn_style"
                android:text="@string/union_keyboard_character_1" />

            <Button
                android:id="@+id/union_keyboard_btn_2"
                style="@style/union_keyboard_number_common_btn_style"
                android:text="@string/union_keyboard_character_2" />

            <Button
                android:id="@+id/union_keyboard_btn_3"
                style="@style/union_keyboard_number_common_btn_style"
                android:text="@string/union_keyboard_character_3" />

        </LinearLayout>

        <LinearLayout style="@style/union_keyboard_content_row_style" >

            <Button
                android:id="@+id/union_keyboard_btn_4"
                style="@style/union_keyboard_number_common_btn_style"
                android:text="@string/union_keyboard_character_4" />

            <Button
                android:id="@+id/union_keyboard_btn_5"
                style="@style/union_keyboard_number_common_btn_style"
                android:text="@string/union_keyboard_character_5" />

            <Button
                android:id="@+id/union_keyboard_btn_6"
                style="@style/union_keyboard_number_common_btn_style"
                android:text="@string/union_keyboard_character_6" />

        </LinearLayout>

        <LinearLayout style="@style/union_keyboard_content_row_style" >

            <Button
                android:id="@+id/union_keyboard_btn_7"
                style="@style/union_keyboard_number_common_btn_style"
                android:text="@string/union_keyboard_character_7" />

            <Button
                android:id="@+id/union_keyboard_btn_8"
                style="@style/union_keyboard_number_common_btn_style"
                android:text="@string/union_keyboard_character_8" />

            <Button
                android:id="@+id/union_keyboard_btn_9"
                style="@style/union_keyboard_number_common_btn_style"
                android:text="@string/union_keyboard_character_9" />

        </LinearLayout>

        <LinearLayout style="@style/union_keyboard_content_row_style" >

            <Button
                android:id="@+id/union_keyboard_btn_alphabet"
                style="@style/union_keyboard_number_function_btn_style"
                android:text="@string/union_keyboard_character_abc" />

            <Button
                android:id="@+id/union_keyboard_btn_0"
                style="@style/union_keyboard_number_common_btn_style"
                android:text="@string/union_keyboard_character_0" />

            <ImageButton
                android:id="@+id/union_keyboard_btn_backspace"
                style="@style/union_keyboard_number_backspace_btn_style" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>