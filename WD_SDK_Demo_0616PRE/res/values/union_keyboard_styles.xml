<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 竖屏根view样式 -->
    <style name="union_keyboard_root_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/union_keyboard_root_background_color</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 竖屏title样式 -->
    <style name="union_keyboard_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@color/union_keyboard_title_background_color</item>
    </style>

    <!-- 竖屏title样式01 -->
    <style name="union_keyboard_title_style_01">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@color/union_keyboard_title_background_color_01</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 竖屏title_logo样式 -->
    <style name="union_keyboard_title_logo_style">
        <item name="android:layout_width">166dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:src">@drawable/union_keyboard_bank_logo_white</item>
    </style>

    <!-- 竖屏title_text样式 -->
    <style name="union_keyboard_title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/union_keyboard_title_text_string</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/union_keyboard_title_text_color</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 竖屏title_text样式01 -->
    <style name="union_keyboard_title_text_style_01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/union_keyboard_title_text_string_01</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/union_keyboard_title_text_color_01</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 竖屏title_text_dismiss样式 -->
    <style name="union_keyboard_title_text_dismiss_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/union_keyboard_title_text_dismiss_string</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/union_keyboard_title_text_dismiss_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 竖屏title_text_dismiss_image_button样式 -->
    <style name="union_keyboard_title_text_dismiss_image_button_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/union_keyboard_title_background_color</item>
        <item name="android:src">@drawable/union_keyboard_dismiss_btn_drawable</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- 竖屏content样式 -->
    <style name="union_keyboard_content_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/union_keyboard_content_background_color</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 竖屏content_row样式 -->
    <style name="union_keyboard_content_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- 竖屏common_btn样式 -->
    <style name="union_keyboard_common_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/union_keyboard_common_btn_drawable</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/union_keyboard_common_btn_font_color</item>
    </style>

    <!-- 竖屏space_btn样式 -->
    <style name="union_keyboard_space_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/union_keyboard_common_btn_drawable</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/union_keyboard_space_btn_drawable</item>
    </style>

    <!-- 竖屏function_btn样式 -->
    <style name="union_keyboard_function_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/union_keyboard_function_btn_drawable</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/union_keyboard_function_btn_font_color</item>
    </style>

    <!-- 竖屏function_image_btn样式 -->
    <style name="union_keyboard_function_image_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/union_keyboard_function_btn_drawable</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- 竖屏shift_btn样式 -->
    <style name="union_keyboard_shift_btn_style" parent="union_keyboard_function_image_btn_style">
        <item name="android:src">@drawable/union_keyboard_shift_btn_drawable</item>
    </style>

    <!-- 竖屏backspace_btn样式 -->
    <style name="union_keyboard_backspace_btn_style" parent="union_keyboard_function_image_btn_style">
        <item name="android:src">@drawable/union_keyboard_backspace_btn_drawable</item>
    </style>

    <!-- 竖屏confirm_btn样式 -->
    <style name="union_keyboard_confirm_btn_style" parent="union_keyboard_function_image_btn_style">
        <item name="android:src">@drawable/union_keyboard_confirm_btn_drawable</item>
    </style>

    <!-- 竖屏number_content样式 -->
    <style name="union_keyboard_number_content_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:padding">0.1dp</item>
        <item name="android:background">@color/union_keyboard_number_content_background_color</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 竖屏number_common_btn样式 -->
    <style name="union_keyboard_number_common_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/union_keyboard_number_common_btn_drawable</item>
        <item name="android:layout_margin">0.1dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/union_keyboard_common_btn_font_color</item>
    </style>

    <!-- 竖屏number_function_btn样式 -->
    <style name="union_keyboard_number_function_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/union_keyboard_number_function_btn_drawable</item>
        <item name="android:layout_margin">0.1dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/union_keyboard_function_btn_font_color</item>
    </style>

    <!-- 竖屏number_backspace_btn样式 -->
    <style name="union_keyboard_number_backspace_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/union_keyboard_number_function_btn_drawable</item>
        <item name="android:layout_margin">0.1dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/union_keyboard_backspace_btn_drawable</item>
    </style>

    <!-- 安全键盘样式 -->
    <style name="union_keyboard_transparent_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> --><!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item> <!-- 模糊 -->
        <!-- <item name="android:windowEnterAnimation">@anim/union_slide_in_bottom</item> -->
    </style>

</resources>